{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <a href="{{ path('accueil') }}"><button class="btn btn-primary">Revenir sur la page ACCUEIL</button></a>
    </div>
    <br>

    <div class="well titre" for="">LISTE DES BONS DE LIVRAISON</div>


    {#ci-dessous la div à imprimer#}

    <div class="jumbotron" id="listebl">
        <table class="table table-sm table-hover">
            <thead>
            <tr>
                <th scope="col" id="numbl" name="numbl">N.</th>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col">Client</th>
                <th scope="col">Société</th>
                <th scope="col">Transporteur</th>
                <th scope="col">Quantité</th>
            </tr>
            </thead>
            <tbody>
            {% for bls in bl %}
                <tr>
                    <th scope="row">{{ bls.id }}</th>
                    <td>{{ bls.dateBl.format('j, M Y h:m') }}</td>
                    <td>{{ bls.descriptionBl }}</td>
                    <td>{{ bls.clientBl }}</td>
                    <td>{{ bls.societeBl }}</td>
                    <td>{{ bls.transporteurBl }}</td>
                    <td>{{ bls.quantiteBl }}</td>
                </tr>
            {% endfor %}
            <tr>
                <th scope="row"></th>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            </tbody>
        </table>
    </div>
    {#    ci-dessus la div à imprimer#}

    <div class="row endpage">
        <div class="col-lg-6">
            <img src="" alt="" name="printpic">
            <h5>IMPRIMER</h5>
        </div>
        <div class="row col-lg-6">
            <button class="col-lg-6 left" name="left">preview</button>
            <button class="col-lg-6 right" name="right">next</button>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
